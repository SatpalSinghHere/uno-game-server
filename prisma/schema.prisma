generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Room {  
  id      String    @id @unique
  clockwise   Boolean
  whoseTurn   Int
  players     Player[]  @relation("RoomPlayers")
  discardCard Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Player {  
  roomId      String    
  playerName  String
  socketId    String    @unique @id
  email       String    @unique
  deck        Json
  room        Room?      @relation("RoomPlayers", fields: [roomId], references: [id])
}